#!/bin/bash

BINNAME="";

if [[ -n "$1" ]]
then
  echo "srcFile/s set : $1"
  BINNAME="${1%.*}"
  echo "Compiling $1 with bin-name : $BINNAME"
  #check if build directory exists
  if [ ! -d "builds" ]; then
    mkdir builds
    cc -Wall -Wextra -pedantic -Werror -O3 $1 -o builds/${BINNAME}
    else
      cc -Wall -Wextra -pedantic -Werror -O3 $1 -o builds/${BINNAME}
  fi
  echo "cc -Wall -Wextra -pedantic -Werror -std=c2x -O3 $1 -o builds/${BINNAME}"
  ./builds/${BINNAME}
else
  echo "Please specify correct src files! currently : $FILE"
fi
